<li class="event-container">
  <div class="event-header">
    <h2 class="event-title"><%= event.title %></h2>
    <div class="event-meta">
      <p class="event-author"><%= event.author.name ?? 'Unknown author' %></p>
      <p>|</p>
      <p class="event-date"><%= event.date ? event.date.toDateString() : 'Unknown date' %></p>
    </div>
  </div>
  <div class="event-body">
    <p class="event-description"><%= event.summary %></p>
  </div>
</li>
